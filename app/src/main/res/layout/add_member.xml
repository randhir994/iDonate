<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:src="@drawable/edit"
                android:id="@+id/imageView" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aname"
                android:gravity="center"
                android:hint="Name"
                android:textColorHint="#ff0000"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/white_box"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:textColorHint="#ff0000"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/aphone"
                android:hint="Phone"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/white_box" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:id="@+id/aemail"
                android:hint="E-mail"
                android:textColorHint="#ff0000"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/white_box"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/aage"
                android:hint="Age"
                android:gravity="center"
                android:padding="5dp"
                android:textColorHint="#ff0000"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/white_box"
                android:layout_marginBottom="10dp" />

            <RadioGroup
                android:id="@+id/radioSex"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <RadioButton
                    android:id="@+id/radioMale"
                    android:checked="true"
                    android:textColorHint="#ff0000"
                    android:textColor="#ff0000"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"/>

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ff0000"
                    android:textColor="#ff0000"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="Female"/>

            </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp">

                <Spinner
                    android:id="@+id/ablood"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:spinnerMode="dropdown"

                    android:popupBackground="@drawable/info_time3"
                    android:background="@drawable/texts"

                    />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/activityCreationImage4"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/drop_icon_yellow"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:ems="10"
                android:id="@+id/acity"
                android:hint="City"
                android:textColorHint="#ff0000"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/white_box"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/apin"
                android:hint="PIN"
                android:inputType="number"
                android:textColorHint="#ff0000"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/white_box"
                android:layout_marginBottom="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:id="@+id/add"
                android:gravity="center"
                android:onClick="toMain1"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/round_button"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>